<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment">

    <Button
        android:id="@+id/btn_tell_joke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructions_text_view"
        android:onClick="tellJoke"
        android:text="@string/button_text"
        tools:ignore="OnClick" />

    <Button

        android:id="@+id/btn_pass_joke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_tell_joke"
        android:layout_alignStart="@+id/btn_tell_joke"
        android:layout_alignLeft="@+id/btn_tell_joke"
        android:onClick="passJoke"
        android:text="@string/pass_joke"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btn_pass_joke_gce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_pass_joke"
        android:layout_alignStart="@+id/btn_pass_joke"
        android:layout_alignLeft="@+id/btn_pass_joke"
        android:onClick="passJokeFromGCE"
        android:text="@string/gce_pass"
        tools:ignore="OnClick" />


    <TextView
        android:id="@+id/instructions_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions" />


</RelativeLayout>
